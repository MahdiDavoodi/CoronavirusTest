<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="4" />

        <ImageView
            android:id="@+id/iv_aboutvirus_tab"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#00FFFFFF"
            app:srcCompat="@mipmap/ic_launcher_virusa_foreground" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/tv_aboutvirus_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:fontFamily="casual"
            android:gravity="center|center_horizontal"
            android:layoutDirection="rtl"
            android:text="@string/tv_aboutvirus_tab"
            android:textAlignment="center"
            android:textColor="#17DB1F"
            android:textDirection="rtl"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <ImageView
            android:id="@+id/iv_aboutvirus1_tab"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="4"
            app:srcCompat="@mipmap/ic_launcher_virus_foreground" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/tv_aboutvirus1_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:fontFamily="casual"
            android:text="@string/tv_aboutvirus1_tab"
            android:textAlignment="center"
            android:textColor="#17DB1F"
            android:textDirection="rtl"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="2" />

        <Button
            android:id="@+id/btn_aboutvirus_tab"
            android:layout_width="wrap_content"
            android:onClick="btnOnClickAboutvirus"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:background="#17DB1F"
            android:fontFamily="casual"
            android:text="@string/more_info"
            android:textAlignment="center"
            android:textColor="#001303"
            android:textDirection="rtl"
            android:textSize="14sp"
            android:textStyle="bold|italic" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/iv_aboutvirus2_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:fontFamily="casual"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="@string/internet_need"
            android:textAlignment="center"
            android:textColor="#E91E63"
            android:textDirection="rtl"
            android:textStyle="bold|italic" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>