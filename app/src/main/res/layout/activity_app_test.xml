<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    android:layout_height="match_parent"
    android:background="#001303"
    android:orientation="vertical"
    tools:context=".AppTestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_apptest_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#17DB1F"
            android:layoutDirection="rtl"
            android:minHeight="?attr/actionBarSize"
            android:textDirection="rtl"
            android:theme="?attr/actionBarTheme"
            app:subtitle="@string/app_test_toolbar1"
            app:subtitleTextColor="#034911"
            app:title="@string/tv_testname_tab"
            app:titleTextColor="#001303" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <ImageView
            android:id="@+id/im_apptest_main"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:srcCompat="@mipmap/ic_launcher_clip_foreground" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <EditText
            android:id="@+id/et_apptest_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#A9FFFFFF"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/hint_name"
            android:inputType="textPersonName"
            android:padding="5dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <EditText
            android:id="@+id/et2_apptest_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#A9FFFFFF"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/hint_age"
            android:inputType="number"
            android:padding="5dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/tv_apptest_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:gravity="center|center_horizontal"
            android:layoutDirection="rtl"
            android:text="@string/app_test_text1"
            android:textAlignment="center"
            android:textColor="#17DB1F"
            android:textDirection="rtl"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton2"
                android:onClick="startAppTestonClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                app:srcCompat="@mipmap/ic_launcher_succsess_foreground" />

            <ImageButton
                android:id="@+id/imageButton"
                android:onClick="exitAppTestonClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                app:srcCompat="@mipmap/ic_launcher_close_foreground" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_btn1_app_test2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="@string/app_test_btn1"
                android:textAlignment="center"
                android:textColor="#17DB1F"
                android:textDirection="rtl"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/btn_app_test_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="@string/app_test_btn2"
                android:textAlignment="center"
                android:textColor="#F10808"
                android:textDirection="rtl"
                android:textSize="18sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/tv_aboutus_year_tab2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/year"
            android:textAlignment="center"
            android:textColor="#17DB1F"
            android:textDirection="ltr"
            android:textStyle="bold|italic" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>